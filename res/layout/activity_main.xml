    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_show_sliding_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
