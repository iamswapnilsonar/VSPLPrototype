<resources>

    <style name="AppTheme" parent="android:Theme.NoTitleBar.Fullscreen" />

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="style_tv_ornament_descr">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="style_tv_ornament_collection_name">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingRight">2dip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="style_btn_dazzler_bottomlayout">
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>

    <style name="style_btn_ornaments_types">
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <style name="style_png_app_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>

    <style name="style_png_app_logo_updated">
        <item name="android:layout_width">65dip</item>
        <item name="android:layout_height">65dip</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>
    
</resources>